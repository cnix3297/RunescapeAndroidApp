<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/buyItemSelector"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:clickable="false"
        android:text="Buy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/buyPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:editable="true"
        android:ems="10"
        android:hint="Price"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/buyItemOldText"
        app:layout_constraintTop_toBottomOf="@+id/buyItemOldText" />

    <EditText
        android:id="@+id/buyAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Quantity"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/buyPrice"
        app:layout_constraintStart_toStartOf="@+id/buyPrice"
        app:layout_constraintTop_toBottomOf="@+id/buyPrice" />

    <Button
        android:id="@+id/goToSell"
        android:layout_width="123dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:text="go to Sell"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/BuyPriceTotal"
        android:layout_width="86dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:editable="false"
        android:hint="Price Total"
        app:layout_constraintStart_toStartOf="@+id/buyAmount"
        app:layout_constraintTop_toBottomOf="@+id/buyAmount" />

    <Button
        android:id="@+id/BuyItemButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Purchase"
        app:layout_constraintEnd_toEndOf="@+id/buyAmount"
        app:layout_constraintTop_toBottomOf="@+id/buyAmount"
        tools:onClick="@string/app_name" />

    <TextView
        android:id="@+id/Item"
        android:layout_width="39dp"
        android:layout_height="22dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:text="Item"
        app:layout_constraintBottom_toBottomOf="@+id/buyItemOldText"
        app:layout_constraintStart_toEndOf="@+id/buyItemOldText"
        app:layout_constraintTop_toTopOf="@+id/buyItemOldText"
        tools:text="Item" />

    <EditText
        android:id="@+id/newItem"
        android:layout_width="198dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:contentDescription="newItem"
        android:ems="10"
        android:hint="New Item"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/buyAmount"
        app:layout_constraintTop_toBottomOf="@+id/BuyItemButton" />

    <Spinner
        android:id="@+id/buyItemOldText"
        android:layout_width="223dp"
        android:layout_height="59dp"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="144dp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/message"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>